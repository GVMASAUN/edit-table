<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class
		name="com.codeinsight.exercise.hibernateRelationships.model.Department"
		table="department">
		<id name="id" column="id">
			<generator class="native" />
		</id>
		<property name="name" column="name" />

		<bag name="employees" table="employee" fetch="join"
			inverse="true">
			<key column="deptId"></key>
			<one-to-many
				class="com.codeinsight.exercise.hibernateRelationships.model.Employee" />
		</bag>
	</class>
</hibernate-mapping>