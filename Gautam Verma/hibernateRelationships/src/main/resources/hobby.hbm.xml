<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class
		name="com.codeinsight.exercise.hibernateRelationships.model.Hobby"
		table="hobby">
		<id name="id" column="id">
			<generator class="native" />
		</id>
		<property name="name" column="name" />

		<many-to-one name="employee"
			class="com.codeinsight.exercise.hibernateRelationships.model.Employee"
			column="empId" not-null="true" fetch="join" cascade="all"></many-to-one>
	</class>
</hibernate-mapping>